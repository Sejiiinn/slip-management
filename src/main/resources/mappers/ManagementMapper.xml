<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="sejin.slipmanagement.repository.ManagementDAO">
    <resultMap id="memberMap" type="sejin.slipmanagement.controller.MemberDTO">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <resultMap id="slipMap" type="sejin.slipmanagement.controller.SlipDTO">
        <result property="member_id" column="member_id"/>
        <result property="total" column="total"/>
        <result property="used" column="used"/>
    </resultMap>

    <resultMap type="sejin.slipmanagement.controller.ManagementDTO" id="memberSlipMap">
        <collection property="memberDTO" resultMap="memberMap"/>
        <collection property="slipDTO" resultMap="slipMap"/>
    </resultMap>


    <select id="findAll" resultMap="memberSlipMap">
        SELECT m.id, m.name, s.member_id, s.total, s.used
        FROM member m
        JOIN slip s
        ON m.id = s.member_id;
    </select>

    <select id="findByCondition" resultMap="memberSlipMap">
        SELECT m.id, m.name, s.member_id, s.total, s.used
        FROM member m
        JOIN slip s
        ON m.id = s.member_id

        <where>
            <if test="searchType == 'condition_id'">
                m.id = #{condition}
            </if>
            <if test="searchType == 'condition_name'">
                m.name = #{condition}
            </if>
            <if test="searchType == 'condition_money'">
                s.total-s.used >= #{condition}
            </if>
        </where>
    </select>

    <update id="allocation">
        UPDATE slip SET total = total + ${amount} / (SELECT COUNT(*) FROM slip)
    </update>
</mapper>